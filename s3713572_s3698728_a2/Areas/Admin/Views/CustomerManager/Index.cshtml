@model IEnumerable<s3713572_s3698728_a2.UserCategory.Admin.Models.Customer>

@{ ViewData["Title"] = "Customer"; }

<body id="overall-background">
    <div class="content-middle-page">
        <div class="content-size">
            <h1>Customer information Management</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CustomerID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CustomerName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TFN)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PostCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.State)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TFN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a class="btn btn-outline-dark" asp-area="admin" asp-controller="TransactionManager" asp-action="TransactionAccountSelection" asp-route-id="@item.CustomerID">Transactions</a>
                <a class="btn btn-outline-dark" asp-action="Lock" asp-route-id="@item.CustomerID"><i class="fas fa-user-lock"></i>lock</a>
                <a class="btn btn-outline-dark" asp-area="admin" asp-controller="BillManager" asp-action="BillPayAccountSelection" asp-route-id="@item.CustomerID">Bills</a>

            </td>
        </tr>
}
                </tbody>
            </table>
        </div>
      </div>
</body>