@model Account
@{ ViewData["Title"] = "Transfer"; }


<body id="overall-background">
    <div class="content-middle-page">
            <div class="row transfer-form">
                <div class="col-md-4" style="margin-left:100px;">
                    <form asp-action="Transfer" style="width:300px !important;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <h6 class="content-topic-position">Enter the transfer amount and target account</h6>
                            <a>Destination Account:</a>
                            <label for="destinationId" class="control-label"></label>
                            <input id="destinationId" name="destinationId" class="form-control"
                                   data-val="true" data-val-number="The field Amount must be a number."
                                   data-val-required="The Amount field is required." />
                            @Html.ValidationMessage("destinationId", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <a>Amount:</a>
                            <label for="Amount" class="control-label"></label>
                            <input id="Amount" name="Amount" class="form-control" value="@ViewBag.Amount?.ToString("0.00")"
                                   data-val="true" data-val-number="The field Amount must be a number."
                                   data-val-required="The Amount field is required." />
                            @Html.ValidationMessage("Amount", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <a>Comment:</a>
                            <label for="Comment" class="control-label"></label>
                            <input id="Comment" name="Comment" class="form-control" value="@ViewBag.Amount?.ToString("0.00")"
                                   data-val="true" />
                            @Html.ValidationMessage("Comment", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Transfer" class="btn btn-outline-dark" />
                        </div>
                        <div>
                            <a asp-action="Index">Abandon the transfer</a>
                        </div>
                    </form>
                </div>
            </div>


        </div>
</body>
            @section Scripts {
                @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
            }
