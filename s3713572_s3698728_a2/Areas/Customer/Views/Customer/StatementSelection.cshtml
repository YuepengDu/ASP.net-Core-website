@model Customer
@{
    ViewData["Title"] = "Statement Selection";
}

<body id="overall-background">
    <div class="content-middle-page">
        <div class="content-size">
            <h1 class="display-4 text-position-fix">Please Select the Account</h1>
            <h3 class="content-topic-position">Your Accounts</h3>
            <table class="table">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.Accounts[0].AccountNumber)</th>
                    <th>@Html.DisplayNameFor(x => x.Accounts[0].AccountType)</th>
                    <th>@Html.DisplayNameFor(x => x.Accounts[0].Balance)</th>
                    <th></th>
                </tr>
                @foreach (var account in Model.Accounts)
                {
    <tr>
        <td>@Html.DisplayFor(x => account.AccountNumber)</td>
        <td>@Html.DisplayFor(x => account.AccountType)</td>
        <td>@Html.DisplayFor(x => account.Balance)</td>
        <td>
            <a class="btn btn-outline-dark"
               asp-controller="Transaction" asp-action="Index" asp-route-id="@account.AccountNumber">View Statement</a>
        </td>
    </tr>
    }
            </table>
        </div>
    </div>
</body>